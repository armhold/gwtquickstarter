<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>

        <div>

            <div style="margin-top: 5px; margin-bottom: 5px;">

                <g:TextArea ui:field="textArea" width="500px" height="200px"/>
            </div>

            <div style="margin-bottom: 5px; float: right;">
                <g:Button ui:field="cancelButton" text="Cancel"/>
                <g:Button ui:field="submitButton" text="Submit"/>
            </div>

            <div style="text-align: center;">
                <g:Button ui:field="thanksButton" text="Thanks!" visible="false" width="100px"/>
            </div>

        </div>

    </g:HTMLPanel>

</ui:UiBinder>
