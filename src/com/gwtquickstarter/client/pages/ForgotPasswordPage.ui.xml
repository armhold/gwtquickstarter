<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>

        <br/>


        <div class="formLayout">

            <h1>Forgot your password? You can reset it here.</h1>

            <p>
                Enter your email address, and we'll send you a link where you can reset your password.
            </p>

            <g:Label ui:field="successLabel" visible="false" addStyleNames="success"/>
            <g:Label ui:field="errorsLabel" visible="false" addStyleNames="error"/>

            <label class="labelLeft">Email:</label>
            <g:TextBox ui:field="emailField"/>

            <div class="spacer"/>

            <div style="margin-bottom: 10px;">
                <g:Button ui:field="resetButton" text="Reset my password"/>
            </div>
        </div>

    </g:HTMLPanel>

</ui:UiBinder>
